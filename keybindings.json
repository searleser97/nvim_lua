[
  {
    "key": "ctrl+b",
    "command": "-workbench.action.toggleSidebarVisibility"
  },
  {
    "key": "ctrl+0",
    "command": "-workbench.action.focusSideBar"
  },
  {
    "key": "ctrl+r",
    "command": "-vscode-neovim.send",
    "when": "editorTextFocus && neovim.ctrlKeysNormal.r && neovim.init && neovim.mode != 'insert' && editorLangId not in 'neovim.editorLangIdExclusions'"
  },
  {
    "key": "ctrl+c",
    "command": "vscode-neovim.send",
    "when": "editorTextFocus && neovim.mode == visual",
    "args": "<C-c>"
  },
  {
    "key": "ctrl+v",
    "command": "workbench.action.terminal.paste",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+b",
    "command": "vscode-neovim.send",
    "when": "editorTextFocus && neovim.mode == normal",
    "args": "<C-b>"
  },
  {
    "key": "ctrl+c",
    "command": "workbench.action.terminal.copySelection",
    "when": "terminalFocus && terminalTextSelected"
  },
  {
    "key": "ctrl+f b",
    "command": "workbench.files.action.focusFilesExplorer"
  },
  {
    "key": "ctrl+g d",
    "command": "runCommands",
    "args": {
      "commands": [
        {
          "command": "workbench.action.terminal.sendSequence",
          "args": { "text": "git diff\u000D" }
        },
        {
          "command": "workbench.action.terminal.focus"
        }
      ]
    }
  },
  {
    "key": "ctrl+g shift+d",
    "command": "runCommands",
    "args": {
      "commands": [
        {
          "command": "workbench.action.terminal.sendSequence",
          "args": { "text": "git diff --staged\u000D" }
        },
        {
          "command": "workbench.action.terminal.focus"
        }
      ]
    }
  },
  {
    "key": "ctrl+g l",
    "command": "gitlens.views.commits.focus"
  },
  {
    "key": "ctrl+g h",
    "command": "gitlens.openFileHistory"
  },
  {
    "key": "ctrl+g b",
    "command": "gitlens.views.branches.focus"
  },
  {
    "key": "ctrl+g s",
    "command": "workbench.view.scm"
  },
  {
    "key": "ctrl+g shift+s",
    "command": "gitlens.showStashesView"
  },
  {
    "key": "ctrl+g c",
    "command": "runCommands",
    "args": {
      "commands": [
        {
          "command": "workbench.action.terminal.sendSequence",
          "args": { "text": "git commit\u000D" }
        },
        {
          "command": "workbench.action.terminal.focus"
        }
      ]
    }
  },
  {
    "key": "ctrl+g a",
    "command": "runCommands",
    "args": {
      "commands": [
        {
          "command": "workbench.action.terminal.sendSequence",
          "args": { "text": "git commit --amend\u000D" }
        },
        {
          "command": "workbench.action.terminal.focus"
        }
      ]
    }
  },
  {
    "key": "ctrl+g shift+p",
    "command": "runCommands",
    "args": {
      "commands": [
        {
          "command": "workbench.action.terminal.sendSequence",
          "args": { "text": "git push\u000D" }
        },
        {
          "command": "workbench.action.terminal.focus"
        }
      ]
    }
  },
  {
    "key": "ctrl+g shift+f",
    "command": "runCommands",
    "args": {
      "commands": [
        {
          "command": "workbench.action.terminal.sendSequence",
          "args": { "text": "git push --force-with-lease\u000D" }
        },
        {
          "command": "workbench.action.terminal.focus"
        }
      ]
    }
  },
  {
    "key": "ctrl+g p",
    "command": "runCommands",
    "args": {
      "commands": [
        {
          "command": "workbench.action.terminal.sendSequence",
          "args": { "text": "git pull\u000D" }
        },
        {
          "command": "workbench.action.terminal.focus"
        }
      ]
    }
  },
  {
    "key": "ctrl+g F",
    "command": "runCommands",
    "args": {
      "commands": [
        {
          "command": "workbench.action.terminal.sendSequence",
          "args": { "text": "git push --force-with-lease\u000D" }
        },
        {
          "command": "workbench.action.terminal.focus"
        }
      ]
    }
  },
  {
    "key": "ctrl+g f",
    "command": "runCommands",
    "args": {
      "commands": [
        {
          "command": "workbench.action.terminal.sendSequence",
          "args": { "text": "git fetch\u000D" }
        },
        {
          "command": "workbench.action.terminal.focus"
        }
      ]
    }
  },
  {
    "key": "ctrl+r f",
    "command": "workbench.action.quickOpen"
  },
  {
    "key": "ctrl+s f",
    "command": "workbench.action.quickOpen"
  },
  {
    "key": "ctrl+s p",
    "command": "workbench.view.search",
    "when": "editorTextFocus && neovim.mode == normal"
  },
  {
    "key": "ctrl+s p",
    "command": "workbench.action.findInFiles",
    "args": { "query": "${selectedText}" },
    "when": "editorTextFocus && neovim.mode == visual"
  },
  {
    "key": "ctrl+h a",
    "command": "vscode-harpoon.addEditor"
  },
  {
    "key": "ctrl+h l",
    "command": "vscode-harpoon.editorQuickPick"
  },
  {
    "key": "ctrl+h e",
    "command": "vscode-harpoon.editEditors"
  },
  {
    "key": "ctrl+1",
    "command": "vscode-harpoon.gotoEditor1"
  },
  {
    "key": "ctrl+2",
    "command": "vscode-harpoon.gotoEditor2"
  },
  {
    "key": "ctrl+3",
    "command": "vscode-harpoon.gotoEditor3"
  },
  {
    "key": "ctrl+4",
    "command": "vscode-harpoon.gotoEditor4"
  },
  {
    "key": "ctrl+5",
    "command": "vscode-harpoon.gotoEditor5"
  },
  {
    "key": "ctrl+6",
    "command": "vscode-harpoon.gotoEditor6"
  },
  {
    "key": "ctrl+7",
    "command": "vscode-harpoon.gotoEditor7"
  },
  {
    "key": "ctrl+8",
    "command": "vscode-harpoon.gotoEditor8"
  },
  {
    "key": "ctrl+9",
    "command": "vscode-harpoon.gotoEditor9"
  },
  {
    "key": "ctrl+n",
    "command": "vscode-neovim.send",
    "when": "editorTextFocus && neovim.mode == normal",
    "args": "<C-n>"
  },
  {
    "key": "ctrl+p",
    "command": "vscode-neovim.send",
    "when": "editorTextFocus && neovim.mode == normal",
    "args": "<C-p>"
  },
  {
    "key": "ctrl+t",
    "command": "workbench.action.terminal.toggleTerminal"
  },
  {
    "key": "F5",
    "command": "runCommands",
    "args": {
      "commands": [
        {
          "command": "workbench.action.terminal.toggleTerminal"
        },
        {
          "command": "vscode-neovim.send",
          "when": "editorTextFocus",
          "args": "<c-t>"
        }
      ]
    }
  },
  {
    "key": "ctrl+up",
    "command": "workbench.action.navigateUp"
  },
  {
    "key": "ctrl+down",
    "command": "workbench.action.navigateDown"
  },
  {
    "key": "ctrl+left",
    "command": "workbench.action.navigateLeft"
  },
  {
    "key": "ctrl+right",
    "command": "workbench.action.navigateRight"
  },
  {
    "key": "ctrl+s b",
    "command": "workbench.action.toggleSidebarVisibility"
  },
  {
    "key": "ctrl+g shift+c",
    "command": "workbench.panel.chat.view.copilot.focus"
  },
  {
    "key": "ctrl+u",
    "command": "vscode-neovim.send",
    "when": "editorTextFocus",
    "args": "<c-u>"
  },
  {
    "key": "ctrl+d",
    "command": "vscode-neovim.send",
    "when": "editorTextFocus",
    "args": "<c-d>"
  },
  {
    "key": "f4",
    "command": "editor.action.quickFix",
    "when": "editorHasCodeActionsProvider && textInputFocus && !editorReadonly"
  },
  {
    "key": "n",
    "command": "vscode-neovim.send",
    "when": "editorTextFocus && neovim.mode == normal",
    "args": "n"
  },
  {
    "key": "shift+n",
    "command": "vscode-neovim.send",
    "when": "editorTextFocus && neovim.mode == normal",
    "args": "N"
  },
